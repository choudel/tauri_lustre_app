{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauri Lustre App",
  "version": "0.1.0",
  "identifier": "taurilustreapp.com",
  "build": {
    "frontendDist": "../priv/static",
    "devUrl": "http://192.168.100.6:1234",
    "beforeDevCommand": "",
    "beforeBuildCommand": "gleam run -m lustre/dev build app --minify"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri Lustre",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
